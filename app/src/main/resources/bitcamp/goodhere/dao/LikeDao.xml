<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.goodhere.dao.LikeDao">

  <resultMap type="like" id="likeMap">
    <id column="like_id" property="no"/>
    <result column="board_id" property="boardNo"/>    
    <result column="member_id" property="memberNo"/>
  </resultMap>

  <insert id="insert" parameterType="like" 
          useGeneratedKeys="true" keyColumn="like_id" keyProperty="no">
    insert into gh_like(board_id, member_id) 
    values(#{boardNo}, #{memberNo})
  </insert>
  
  <delete id="delete" parameterType="int">
    delete from gh_like
    where like_id=#{no}
  </delete>

</mapper>





